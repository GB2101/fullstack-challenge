{
	"name": "Fullstack",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:api": "turbo run build --filter=api-gateway",
		"build:auth": "turbo run build --filter=auth-service",
		"dev": "turbo run dev",
		"dev:api": "turbo run dev --filter=api-gateway",
		"dev:auth": "turbo run dev --filter=auth-service",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types"
	},
	"devDependencies": {
		"prettier": "^3.6.2",
		"turbo": "^2.5.8",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@10.9.3",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
