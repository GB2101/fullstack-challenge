{
	"name": "fullstack",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:web": "turbo run build --filter=web",
		"build:api": "turbo run build --filter=api-gateway",
		"build:auth": "turbo run build --filter=auth-service",
		"build:tasks": "turbo run build --filter=tasks-service",
		"build:notifications": "turbo run build --filter=notifications-service",
		"dev": "turbo run dev",
		"dev:web": "turbo run dev --filter=web",
		"dev:api": "turbo run dev --filter=api-gateway",
		"dev:auth": "turbo run dev --filter=auth-service",
		"dev:tasks": "turbo run dev --filter=tasks-service",
		"dev:notifications": "turbo run dev --filter=notifications-service",
		"seed": "npm run seed -w tasks-service",
		"migration": "npm run migration -w auth-service -w tasks-service",
		"migration:generate": "npm run migration:generate -w auth-service -w tasks-service",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types"
	},
	"devDependencies": {
		"prettier": "^3.6.2",
		"turbo": "^2.5.8",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@10.9.3",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@nestjs/config": "^4.0.2",
		"@nestjs/microservices": "^11.1.6",
		"@nestjs/typeorm": "^11.0.0",
		"amqp-connection-manager": "^5.0.0",
		"amqplib": "^0.10.9",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"pg": "^8.16.3",
		"typeorm": "^0.3.27",
		"zod": "^4.1.12"
	}
}
